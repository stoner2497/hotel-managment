    <div class="awe-overlay"></div>

    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>Restaurant</h2>
                <p>We offer variety of foods to our lovely customer </p>
            </div>
        </div>

    </div>

</section>
<!-- END / SUB BANNER -->

<!-- RESTAURANTS -->
<section class="section-restaurant-1 bg-white">
    <div class="container">

        <div class="restaurant-lager">

            <div class="restaurant_content">

                <!-- HEADING -->
                <div class="restaurant_title text-center">
                    <h2 class="heading">11:00 AM - 12:00 PM</h2>
                    <span class="time">For order Please Make A call To our reception</span>
                </div>
                <!-- END / HEADING -->

                <div class="row">

                    <!-- ITEM -->
                    {{#each restro}}
                    <div class="col-md-6">
                        <div class="restaurant_item lager-thumbs">

                            <div class="img">
                                <a href="#"><img src="../public/images/restaurants/img-1.jpg" alt=""></a>
                            </div>

                            <div class="text">
                                <h2><a href="#">{{DishName}}</a></h2>

                                <p class="desc">INGRIDIENTS:{{Indigridents}}.</p>

                                <p class="price">
                                    <span class="amout">INR:{{Price}}</span>
                                </p>
                                {{#if user}}
                                <input type="submit" value="Order Now">
                                {{else}}
                                <small>for order please register</small>
                                {{/if}}
                            </div>

                        </div>
                    </div>
                    {{/each}}

                    <!-- END / ITEM -->

                </div>

            </div>

        </div>

    </div>
</section>